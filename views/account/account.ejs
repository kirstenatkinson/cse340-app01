<% if (title) { %>
    <h1 id="account-page-title"><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

    <% if (notice && notice.length > 0) { %>
        <div class="notice-message">
          <%= notice %>
        </div>
      <% } %>

    <% if (errors && errors.array) { %>
        <ul class="notice">
           <% errors.array().forEach(error => { %>
             <li><%= error.msg %></li>
           <% }) %>
        </ul>
    <% } %>

    <p>You are logged in</p>